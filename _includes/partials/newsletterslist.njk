{% set introDescription = newsletter[locale].introDescription %}

<ul class="row list-unstyled wb-eqht-grd wb-filter mrgn-tp-md pb-4 wb-init wb-filter-inited">
		{% for newsletter in newsletterslist %}
		<li class="col-xs-12 col-md-6 mrgn-tp-md mrgn-bttm-md">
			<div class="brdr-tp brdr-rght brdr-bttm brdr-lft hght-inhrt">
				<h3 class="mrgn-tp-md mrgn-rght-md mrgn-bttm-md mrgn-lft-md"><a href="{{ newsletter.url }}">{{ newsletter.data.title }}</a></h3>
				<div class="mrgn-rght-md mrgn-bttm-md mrgn-lft-md">
					<p><strong>{{ introDescription }}</strong>{{ newsletter.data.description| safe }}</p>
				</div>
			</div>
		</li>
		{% endfor %}
</ul>
