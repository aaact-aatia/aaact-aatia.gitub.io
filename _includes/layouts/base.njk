<!DOCTYPE html>
<html class="no-js" lang="{{ locale }}" dir="ltr">

{% include "partials/head.njk" %}

<body vocab="http://schema.org/" typeof="WebPage">

	{% include "partials/skipnav.njk" %}

	{% include "partials/header.njk"  %}

	<main property="mainContentOfPage" resource="#wb-main" typeof="WebPageElement" {% if tags %} class="{{ tags }}"{% endif %}>

			<div class="container">
				<h1 property="name" id="wb-cont">{{ title | safe }}</h1>
				{% if tagline %}
					<p class="tagline">{{ tagline | safe }}</p>
				{% endif %}
				<p class="description">{% if tags and "newsletters" in tags %}<strong>{{ newsletter[locale].introDescription }}</strong>{% endif %}{{ description | safe }}</p>
				{% include "partials/alerts.njk" %}
				{{ content | safe }}
			</div>

			{% include "partials/pagedetails.njk" %}

	</main>

	{% include "partials/footer.njk" %}

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.js"></script>
	<script src="https://www.canada.ca/etc/designs/canada/wet-boew/js/wet-boew.min.js"></script>
	<script src="https://www.canada.ca/etc/designs/canada/wet-boew/js/theme.min.js"></script>
	{%- if customScript -%}
		<script src="{{ customScript }}"></script>
	{%- endif -%}
</body>
</html>
